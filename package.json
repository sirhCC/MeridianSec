{
  "name": "secrets-canary",
  "version": "0.1.0",
  "private": true,
  "description": "Canary secrets & exfiltration early-warning service (MVP skeleton)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "canary": "dist/cli/index.js"
  },
  "scripts": {
    "prepare": "prisma generate && husky install",
    "dev": "tsx src/index.ts",
    "dev:cli": "tsx src/cli/index.ts --help",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "canary": "tsx src/cli/index.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "format": "prettier --write ."
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "pino": "^9.1.0",
    "prom-client": "^15.1.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.3",
    "prisma": "^5.18.0",
    "supertest": "^7.0.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --cache --fix --ext .ts"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
